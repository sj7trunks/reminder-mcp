{
  "name": "reminder-mcp",
  "version": "1.0.0",
  "description": "MCP server providing persistent memory, scheduled reminders, task tracking, and activity history for AI assistants",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/http.js",
    "dev": "tsx src/index.ts",
    "dev:http": "tsx src/http.ts",
    "backfill:embeddings": "tsx src/scripts/backfill-embeddings.ts",
    "migrate": "knex migrate:latest",
    "migrate:make": "knex migrate:make",
    "migrate:rollback": "knex migrate:rollback"
  },
  "keywords": [
    "mcp",
    "reminder",
    "memory",
    "task-tracking",
    "ai-assistant"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^11.7.0",
    "bull": "^4.16.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.2.0",
    "express": "^5.2.1",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.3",
    "knex": "^3.1.0",
    "openai": "^4.77.0",
    "pg": "^8.13.0",
    "pgvector": "^0.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.11",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.0",
    "@types/uuid": "^9.0.8",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}

# Server Configuration (HTTP mode)
PORT=3000
HOST=0.0.0.0

# API Key for authentication (REQUIRED for production)
# Generate with: openssl rand -hex 32
API_KEY=your-secret-api-key-here

# Database Configuration
# For SQLite (development)
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/reminder.db

# For PostgreSQL (production)
# DATABASE_TYPE=postgres
# DATABASE_URL=postgresql://user:password@localhost:5432/reminder_mcp

# Redis Configuration (optional - for Bull queue)
# If not provided, scheduling will use in-memory polling
# REDIS_URL=redis://localhost:6379

# Webhook Configuration (optional)
# WEBHOOK_URL=https://your-app.com/notifications

# Default timezone
DEFAULT_TIMEZONE=America/Los_Angeles

# Logging
LOG_LEVEL=info
